<div class="login-box">
    <h2>Вход на сайт</h2>

    <form onsubmit="return loginUser()">
        <input type="text" id="login" placeholder="Логин" required><br>
        <input type="password" id="password" placeholder="Пароль" required><br>
        <button type="submit">Войти</button>
    </form>
</div>

<script>
function loginUser() {
    var login = document.getElementById("login").value;
    var password = document.getElementById("password").value;

   f (login === "admin" && password === "1234") {
        window.location.href = "admin.html"; // переходим на admin.html
        return false;
    } else if (login === "civilian" && password === "1234") {
        window.location.href = "civilian.html"; // переходим на civilian.html
        return false;
    } else if (login === "worker" && password === "1234") {
        window.location.href = "worker.html"; // переходим на worker.html
        return false;
    } else {
        alert("Неверный логин или пароль");
        return false;
    }
}
</script>

