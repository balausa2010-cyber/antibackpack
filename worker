<script>

// ====== ДАННЫЕ ======
let tasks = [
{ id:1, title:"Освещение — ул. Абая", priority:"High", lat:50.4111, lon:80.2275, completed:false, time:0 },
{ id:2, title:"Яма — район Центр", priority:"Medium", lat:50.417, lon:80.23, completed:false, time:0 },
{ id:3, title:"Мусор — парк", priority:"Low", lat:50.42, lon:80.25, completed:false, time:0 }
];

let timerInterval = null;
let activeTask = null;

// ====== КАРТА ======
var map = L.map('map').setView([50.4111, 80.2275], 13);
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);

tasks.forEach(t=>{
    L.marker([t.lat,t.lon]).addTo(map)
    .bindPopup(t.title);
});

// ====== ОТРИСОВКА ======
function renderTasks(){

    const container = document.getElementById("taskList");
    container.innerHTML = "";

    // сортировка по приоритету
    const order = {High:1,Medium:2,Low:3};
    tasks.sort((a,b)=>order[a.priority]-order[b.priority]);

    tasks.forEach(task=>{

        let badgeClass = task.priority=="High"?"badge-high":
                         task.priority=="Medium"?"badge-medium":"badge-low";

        let div = document.createElement("div");
        div.className = "card";

        div.innerHTML = `
        <strong>${task.title}</strong>
        <span class="badge ${badgeClass}">${task.priority}</span>
        <div>Время: <span id="time${task.id}">${task.time}s</span></div>

        <input type="file" onchange="savePhoto(event,${task.id},'before')">
        <input type="file" onchange="savePhoto(event,${task.id},'after')">

        <br>
        <button class="button button-primary" onclick="startTimer(${task.id})">Старт</button>
        <button class="button button-gold" onclick="navigate(${task.lat},${task.lon})">Навигация</button>
        <button class="button button-danger" onclick="completeTask(${task.id})">Завершить</button>
        `;

        container.appendChild(div);
    });

    updateKPI();
}

// ====== ТАЙМЕР ======
function startTimer(id){
    if(timerInterval) clearInterval(timerInterval);
    activeTask = tasks.find(t=>t.id==id);

    timerInterval = setInterval(()=>{
        activeTask.time++;
        document.getElementById("time"+id).innerText = activeTask.time+"s";
    },1000);
}

// ====== ФОТО ======
function savePhoto(e,id,type){
    const task = tasks.find(t=>t.id==id);
    task[type] = true;
    alert("Фото "+type+" сохранено");
}

// ====== НАВИГАЦИЯ ======
function navigate(lat,lon){
    window.open(`https://www.google.com/maps/dir/?api=1&destination=${lat},${lon}`);
}

// ====== ЗАВЕРШЕНИЕ ======
function completeTask(id){

    const task = tasks.find(t=>t.id==id);

    if(!task.before || !task.after){
        alert("Необходимо фото До и После!");
        return;
    }

    if(task.time==0){
        alert("Не зафиксировано время работы!");
        return;
    }

    task.completed = true;
    clearInterval(timerInterval);

    sendReport(task);
    alert("Отчёт отправлен автоматически!");

    renderTasks();
}

// ====== ОТПРАВКА ОТЧЁТА ======
function sendReport(task){
    console.log("Отправка отчёта:",task);
}

// ====== KPI ======
function updateKPI(){
    let total = tasks.length;
    let done = tasks.filter(t=>t.completed).length;
    let photoScore = tasks.filter(t=>t.before && t.after).length / total;
    let completionRate = done/total;

    let score = Math.round((completionRate*0.5 + photoScore*0.5)*100);

    document.getElementById("kpiText").innerText =
    `Выполнено: ${done}/${total} | KPI: ${score}/100`;

    document.getElementById("kpiBar").style.width = score+"%";
}

// ====== ДНЕВНОЙ ОТЧЁТ ======
function submitDailyReport(){
    let report = tasks.map(t=>({
        title:t.title,
        completed:t.completed,
        time:t.time
    }));

    document.getElementById("dailyReport").innerText =
    JSON.stringify(report,null,2);

    console.log("Дневной отчёт:",report);
}

renderTasks();

</script>

</body>
</html>

