<script>
// Массив задач для карты
const tasks = [];

// Карта Semey
const map = L.map('map').setView([50.4111, 80.2275], 13);
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19, attribution: '© OpenStreetMap contributors'
}).addTo(map);

const markers = {};
function renderMarkers(){
    Object.values(markers).forEach(m => map.removeLayer(m));
    Object.keys(markers).forEach(k => delete markers[k]);
    tasks.forEach(t => {
        if(t.lat == null || t.lon == null) return;
        const m = L.marker([t.lat, t.lon]).addTo(map)
            .bindPopup('<strong>' + escapeHtml(t.title) + '</strong><br/>' + escapeHtml(t.priority))
            .on('click', () => { highlightTask(t.id); });
        markers[t.id] = m;
    });
}
function escapeHtml(text){ const div = document.createElement("div"); div.textContent=text; return div.innerHTML; }
function highlightTask(id){ alert("Вы выбрали задачу ID: "+id); }

// Показать/скрыть поле для "Другое"
function checkOther() {
    let category = document.getElementById("category").value;
    document.getElementById("otherTitle").style.display = category === "Другое" ? "block" : "none";
}

// Отправка заявки
function submitApplication() {
    let category = document.getElementById("category").value;
    let otherTitle = document.getElementById("otherTitle").value;
    let desc = document.getElementById("description").value;
    if(category === "Другое" && !otherTitle) { alert("Введите название вашей проблемы!"); return; }
    if(!desc) { alert("Введите описание проблемы!"); return; }

    let displayName = category === "Другое" ? otherTitle : category;

    // Добавляем в массив задач
    const center = map.getCenter();
    tasks.push({id:Date.now(), title:displayName, priority:"Средний", lat:center.lat, lon:center.lng});
    renderMarkers();

    addNotification("Новая заявка отправлена: " + displayName);
    document.getElementById("statusText").innerText = displayName;
    updateStatus('Отправлено');
}

// Обновление статуса
function updateStatus(status){
    const badge = document.getElementById("statusBadge");
    const progress = document.getElementById("progressBar");
    document.getElementById("statusText").innerText = status;

    switch(status){
        case 'Отправлено':
            badge.innerText=status; badge.className="badge badge-secondary"; progress.style.width="10%"; break;
        case 'В рассмотрении':
            badge.innerText=status; badge.className="badge badge-warning"; progress.style.width="40%"; break;
        case 'В процессе':
            badge.innerText=status; badge.className="badge badge-warning"; progress.style.width="70%"; break;
        case 'Выполнено':
            badge.innerText=status; badge.className="badge badge-success"; progress.style.width="100%"; break;
    }
    addNotification("Статус заявки изменен: " + status);
}

// Добавление уведомления
function addNotification(text){
    let div=document.createElement("div"); div.className="notification"; div.innerText=text;
    document.getElementById("notifications").prepend(div);
}
</script>

